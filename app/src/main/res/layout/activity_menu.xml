<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_palestrante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.freeman.asktome.activity.MenuActivity"
    android:orientation="vertical"
    android:weightSum="8"
    android:theme="@style/AppTheme"
    android:background="@color/colorAccent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_usuario_preto"
                android:id="@+id/perfil_btn"
                android:layout_weight="10"
                android:layout_margin="5dp"
                android:background="@color/colorSecundary"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <TextView
                android:text="Minha Conta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/TextView"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_margin="1dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_lupa_preta"
                android:id="@+id/procurar_btn"
                android:layout_weight="10"
                android:layout_margin="5dp"
                android:background="@color/colorSecundary"
                android:scaleType="fitCenter"
                android:padding="10dp" />

            <TextView
                android:text="Procurar Palestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TextView2"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:id="@+id/layout_palestrante">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_prancheta_preta"
                android:id="@+id/nova_palestra_btn"
                android:layout_weight="10"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@color/colorSecundary"
                android:padding="10dp" />

            <TextView
                android:text="Nova Palestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/TextView3"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_pasta"
                android:id="@+id/minhas_palestras_btn"
                android:layout_weight="10"
                android:layout_margin="5dp"
                android:background="@color/colorSecundary"
                android:scaleType="fitCenter"
                android:padding="10dp" />

            <TextView
                android:text="Minhas Palestras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TextView4"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
